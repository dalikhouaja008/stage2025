@model IEnumerable<shopping.Client.Models.product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index des produits</h1>

<form asp-action="Index" method="get">
    <fieldset>
        <legend>Recherche</legend>
        Saisir un nom de produit :
        <input type="text" name="searchName" value="@Context.Request.Query["searchName"]" />
        <input type="submit" value="Rechercher" />
    </fieldset>
</form>

<p>
    <a asp-action="Create">Créer un nouveau produit</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Category)</th>
            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
            <th>@Html.DisplayNameFor(model => model.First().ImageFile)</th>
            <th>@Html.DisplayNameFor(model => model.First().Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageFile))
                    {
                        <img src="~/images/@item.ImageFile" alt="@item.Name" style="max-height:50px;" />
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>
                    @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Détails", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
